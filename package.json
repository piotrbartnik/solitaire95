{
  "name": "windows95-solitaire-monorepo",
  "version": "0.1.2",
  "private": true,
  "workspaces": [
    "components/*",
    "applications/*"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "babel-jest": "^26.6.3",
    "concurrently": "^5.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-transform-css": "^2.1.0",
    "lerna": "^3.22.1"
  },
  "scripts": {
    "install": "lerna bootstrap",
    "start:web": "concurrently 'cd ./components/solitaire95 && npx webpack' 'cd ./applications/web-app && yarn start'",
    "start:desktop": "concurrently 'cd ./components/solitaire95 && npx webpack' 'cd ./applications/electron-react-app && yarn start'",
    "rmmodules": "find . -name 'node_modules' -type d -exec rm -rf '{}' +",
    "build:packages": "lerna run webpack",
    "test": "jest"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
