{
  "name": "windows95-solitaire-monorepo",
  "version": "0.1.2",
  "private": true,
  "workspaces": [
    "components/*",
    "applications/*"
  ],
  "devDependencies": {
    "concurrently": "^5.3.0",
    "lerna": "^3.22.1"
  },
  "scripts": {
    "install": "lerna bootstrap",
    "start:web": "concurrently 'cd ./applications/web-app && yarn start' 'cd ./components/solitaire95 && npx webpack'",
    "start:desktop": "concurrently 'cd ./applications/electron-react-app && yarn start' 'cd ./components/solitaire95 && npx webpack'",
    "rmmodules": "find . -name 'node_modules' -type d -exec rm -rf '{}' +",
    "build:packages": "lerna run webpack"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
